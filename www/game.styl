body:not(.loaded) #content
  display none

ul
  list-style-type none
  font-size 2.2em

body:not(.has-scores) .has-scores-title
  display none
body.has-scores .no-scores-title
  display none
body:not(.has-players) h2
  display none

#leaderboard
  ul
    .badge
      font-size 50%
      direction ltr

      body:not(.has-scores) &
        display none

#buzzers
  /*
