#content
  position fixed
  width 100%
  height 100%
  display flex
  align-items center
  justify-content center

  body:not(.loaded) &
    display none

#buzzer
  border-radius 50%
  width 70vmin
  height 70vmin
  /*opacity 1 !important*/
  transition color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-ou

  &:disabled
    pointer-events none

  body[data-my-status=can-press] &
    background-color #e74c3c
    border-color #e74c3c
  
  body[data-my-status=runner] &
    background-color #f39c12
    border-color #f39c12

  body[data-my-status=leader] &
    background-color#00bc8c
    border-color #00bc8c